<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	
	<select id="list" resultType="com.web.kong.DTO.BoardiDTO">
		select * from boardi order by boardnum asc
	</select>
	
	<select id="vlist" resultType="com.web.kong.DTO.BoardiDTO">
		select * from boardi where boardnum = #{boardnum}
	</select>
	
	<insert id="add" parameterType="com.web.kong.DTO.BoardiDTO">
		insert into boardi values(#{boardnum}, #{subject}, #{writer}, #{contentq})
	</insert>
	
	<delete id="del" parameterType="String">
		delete from boardi where boardnum = #{boardnum}
	</delete>
	

</mapper>















    
    